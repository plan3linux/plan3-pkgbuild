pkgname=plan3-base-config-git
_pkgname=plan3-base-config
_destname1="/usr"
_destname2="/etc"
pkgver=23.12
pkgrel=04
pkgdesc="Plan 3 BSPWM Config Files"
arch=('any')
url="https://github.com/plan3linux/${_pkgname}"
license=('GPL3')
depends=('rofi' 'picom' 'sxhkd' 'conky' 'network-manager-applet' 'sddm' 'numlockx' 'nitrogen' 'volumeicon' 'mpd' 'btop' 'mpd' 'thunar' 'gvfs' 'gvfs-smb' 'pipewire' 'wireplumber' 'pipewire-pulse' 'pipewire-jack' 'librewolf-bin' 'pipewire-alsa' 'neovim' 'neofetch' 'zsh' 'git' 'alacritty' 'xdg-user-dirs' 'xdg-user-dirs-gtk' 'noto-fonts')
makedepends=('git')
options=(!strip !emptydirs)
install='readme.install'
conflicts=()
replaces=()
source=($_pkgname-${pkgver}-${pkgrel}::git+$url)
sha256sums=('SKIP')
package() {
	cp -r ${srcdir}/${_pkgname}-${pkgver}-${pkgrel}/${_destname1} ${pkgdir}
	cp -r ${srcdir}/${_pkgname}-${pkgver}-${pkgrel}/${_destname2} ${pkgdir}
}
